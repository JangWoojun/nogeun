<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginBottom="28dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_detail_item_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <TextView
            android:fontFamily="@font/default_font"
            android:id="@+id/tv_detail_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김상중"
            android:textColor="@color/gray900"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/tv_detail_item_date"
            android:fontFamily="@font/default_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023.10.02"
            android:textColor="@color/gray500"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"/>
    </LinearLayout>

    <TextView
        android:fontFamily="@font/default_font"
        android:id="@+id/tv_detail_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="dasdasdasdasdasdasdasdasdasdasdasdasdasdasddasdasdasdasdasd"
        android:textSize="22sp"
        android:textColor="@color/gray900"/>

</LinearLayout>