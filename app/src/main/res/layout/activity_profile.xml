<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profile.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_profile_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_arrow_back_ios_24"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뒤로 가기"
            android:textSize="24sp"
            android:textColor="@color/gray900"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="4dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="12dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="13dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신준서"
                    android:textColor="@color/gray900"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-medium"
                    android:textFontWeight="300"/>

                <TextView
                    android:id="@+id/tv_profile_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60세"
                    android:textSize="22sp"
                    android:textColor="@color/gray500"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asdasdasd"
                android:textColor="@color/gray500"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="24dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:background="@drawable/profile_btn_back"
            android:backgroundTint="@color/primary"
            android:text="50000포인트"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:textFontWeight="700"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:background="@drawable/profile_btn_back"
            android:backgroundTint="@color/gray100"
            android:drawableLeft="@drawable/logout"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="로그아웃"
            android:textSize="24sp"
            android:textColor="@color/gray900"
            android:fontFamily="sans-serif-medium"
            android:textFontWeight="700"/>
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="24dp"
        android:background="@color/gray100"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv_profile_name_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdasd"
            android:textSize="24sp"
            android:textColor="@color/gray900"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="님이 게시한 사진"
            android:textSize="24sp"
            android:textColor="@color/gray900"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>
    
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="16dp"/>
</LinearLayout>